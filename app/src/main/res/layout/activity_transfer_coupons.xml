<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/m_bg1"
    tools:context=".Transfer_Coupons"
    tools:layout_editor_absoluteY="56dp">

    <TableLayout
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grad_transp"
        android:backgroundTint="#99000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Send to :-"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etReceiverRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Roll No."
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp"
                android:typeface="serif" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/et_bg">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Select Day :-"
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="127dp" />

            <Spinner
                android:id="@+id/spnDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="127dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <CheckBox
                android:id="@+id/cbBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Breakfast"
                android:buttonTint="@color/white"
                android:textColor="@drawable/cb_color"
                android:textSize="14sp"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="247dp" />

            <CheckBox
                android:id="@+id/cbLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Lunch"
                android:buttonTint="@color/white"
                android:textColor="@drawable/cb_color"
                android:textSize="14sp"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="247dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <CheckBox
                android:id="@+id/cbHightea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="High Tea"
                android:buttonTint="@color/white"
                android:textColor="@drawable/cb_color"
                android:textSize="14sp"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="324dp" />

            <CheckBox
                android:id="@+id/cbDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Dinner"
                android:buttonTint="@color/white"
                android:textColor="@drawable/cb_color"
                android:textSize="14sp"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="324dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btnTransferC"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg"
                android:text="Transfer"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/onclick_effect"
                android:textColor="@drawable/cb_color"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="468dp" />
        </TableRow>


    </TableLayout>



</android.support.constraint.ConstraintLayout>